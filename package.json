{
	"name": "sveltekit-graphql-fetch",
	"version": "0.0.1",
	"license": "BSD-3-Clause",
	"description": "SvelteKit GraphQL queries using fetch only: how you can drop Apollo client and urql dependencies altogether to make your Svelte app leaner.",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-check --fail-on-hints",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"prettier:check": "prettier --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"gen": "export $(grep SWOP_API_KEY .env | xargs) && graphql-codegen --config codegen.json && prettier --write src/lib/generated/graphql.ts"
	},
	"devDependencies": {
		"@babel/core": "^7.21.0",
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-conventional": "^17.4.4",
		"@fontsource/source-sans-pro": "^4.5.11",
		"@graphql-codegen/cli": "^3.2.2",
		"@graphql-codegen/typescript": "^3.0.2",
		"@graphql-codegen/typescript-document-nodes": "^3.0.2",
		"@graphql-codegen/typescript-operations": "^3.0.2",
		"@sveltejs/adapter-cloudflare": "2.2.0",
		"@sveltejs/kit": "1.11.0",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^5.54.1",
		"@typescript-eslint/parser": "^5.54.1",
		"cosmiconfig-toml-loader": "^1.0.0",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"graphql": "^16.6.0",
		"graphql-codegen-svelte-apollo": "^1.1.0",
		"graphql-tag": "^2.12.6",
		"husky": "^8.0.3",
		"prettier": "^2.8.4",
		"prettier-plugin-svelte": "^2.9.0",
		"svelte": "^3.55.1",
		"svelte-check": "^3.1.0",
		"svelte-preprocess": "^5.0.1",
		"ts-node": "^10.9.1",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.1.4"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rodneylab/sveltekit-grapqhql-fetch"
	},
	"bugs": {
		"url": "https://github.com/rodneylab/sveltekit-graphql-fetch/issues"
	},
	"type": "module",
	"peerDependencies": {
		"@babel/core": "^7.20.12",
		"cosmiconfig-toml-loader": "^1.0.0",
		"graphql": "^16.0.1",
		"ts-node": ">=10",
		"vite": "^3.0.1"
	}
}
